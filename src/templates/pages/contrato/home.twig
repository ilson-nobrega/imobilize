{% extends "admin.twig" %}

{% block customCss %}
<link href="../vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
<link href="../vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
{% endblock customCss %}

{% block contentHeader %}
    Contratos
{% endblock contentHeader %}

{% block content %}
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="inquilinos">
            <thead>
            <tr>
                <th>Código</th>
                <th>Status</th>
                <th>Tipo do Imóvel</th>
                <th>Número de Quartos</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>UF</th>
                <th>Ação</th>
            </tr>
            </thead>
            <tbody>
            {% for var in data %}
                <tr class="odd gradeX">
                    <td>{{ var.codigo }}</td>
                    <td>{{ var.status }}</td>
                    <td>{{ var.tipo_imovel }}</td>
                    <td>{{ var.numero_quartos }}</td>
                    <td>{{ var.bairro }}</td>
                    <td>{{ var.cidade }}</td>
                    <td>{{ var.sigla }}</td>
                    <td>
                        <a href="#">
                            <i class="fa fa-plus-circle"></i>
                        </a>
                        <a href="#">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="#">
                            <i class="fa fa-times"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}

{% block customJs %}
<script src="../vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../vendor/datatables-responsive/dataTables.responsive.js"></script>
<script>
    $(document).ready(function() {
        $('#inquilinos').DataTable({
            responsive: true,
            language: {
                url: "../dist/js/ptbr.datatable.json"
            }
        });
    });
</script>
{% endblock customJs %}